@using EntityLayer.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Index</h1>
<br />

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th>Activate</th>
        <th>In-Activate</th>
        <th>Edit</th>
    </tr>
    @foreach (var item in Model)
{
    <tr>
        <th>@item.CategoryId</th>
        <th>@item.CategoryName</th>
        <td><a href="#" class="btn btn-outline-success">Activate</a></td>
        <td><a href="/Admin/Category/DeleteCAtegory/@item.CategoryId" id="deletebtn" onclick="return confirm('Are you sure, you want to delete? ');" class="btn btn-outline-danger">In-Activate</a></td>
        <td><a href="#" class="btn btn-outline-info">Edit</a></td>
    </tr>
}

</table>
<br />
<a href="/Admin/Category/AddCategory/" class="btn btn-outline-success">New Category</a>
<br />
<br />



@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index", new{page} ))

