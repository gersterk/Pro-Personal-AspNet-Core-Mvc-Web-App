@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>Writer's Blogs</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Publish Date</th>
        <th>Category</th>
        <th>Statu</th>
        <th>Edit</th> 
        <th>Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BlogId</td>
            <td>@item.BlogName</td>
            <td>@(((DateTime)item.PublishDate).ToString("dd MMM yyyy"))</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.IsActiveBlog</td>
            <td><a href="#" class="btn btn-warning">Edit</a></td>

            <td><a href="/Blog/DeleteBlog/@item.BlogId" onclick="return confirm('Are you sure, you want to delete?')" class="btn btn-dark">Delete</a></td>
        </tr>
    }

</table>

<a href="#" class="btn btn-primary">Create new blog</a>

