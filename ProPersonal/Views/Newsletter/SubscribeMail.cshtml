        <input type="submit" value="Subscribe" id="btn">
    </form>

</div>

<script type="text/javascript">
    
$("#btn").click(function() {
    let values = {
        Mail: $("#txtmail").val();

    };

    $.ajax({
        type: "post",
        url: "/Newsletter/SubscribeMail/",
        data: values,
        success: function(func) {
            let result = jQuery.parseJSON(func);

        }
    });
});

</script>

