@using EntityLayer.Concrete
@model List<Project>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Projects</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">

                    @foreach (var item in Model)
                    {

                        <div class="col-lg-4 card">
                            <a href="/Project/ProjectReadAll/@item.ProjectId/">
                                <img src="@item.ProjectImage" class="card-img-top img-fluid" alt="">
                            </a>


                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i> @(((DateTime)item.ProjectPublishDate).ToString("dd MMM yyyy"))
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                </h5>
                                <p class="card-text mb-3"> @item.ProjectContenct.Substring(0,100)</p>
                                @*<p class="card-text mb-3"> @item.ProjectContenct.Substring(0
                                    <a href="/Project/ProjectReadAll/@item.ProjectId/">@item.ProjectName</a>,item.ProjectContenct.Substring(0,50).LastIndexOf(" "))...</p>*@
                                <a href="/Project/ProjectReadAll/@item.ProjectId/" class="btn btn-primary read-m">Read More</a>
                            </div>

                        </div>


                    }

                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>

