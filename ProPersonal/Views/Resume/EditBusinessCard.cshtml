@model EntityLayer.Concrete.BusinessCard
@{
    ViewData["Title"] = "EditBusinessCard";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<br />
<h3>Edit Business Card</h3>
<br />



@using (Html.BeginForm("EditBusinessCard", "Resume", FormMethod.Post,  new{@class="col-lg-12"})){

    @Html.Label("Profession")
    @Html.TextBoxFor(x=>x.Profession, new{ @class="form-control"})

    <br />
    <br />



    @Html.Label("Adress")
    @Html.TextBoxFor(x=>x.Address, new {@class="form-control"})
   
    <br />
    <br />




    @Html.Label("Image")
    @Html.TextBoxFor(x=>x.Image, new{ @class="form-control"})

     <br />
     <br />

    @Html.Label("Email")
    @Html.TextBoxFor(x=>x.Email, new{ @class="form-control"})

    
    <br />
    <br />

      

    @Html.Label("Self-Description")
    @Html.TextAreaFor(x=>x.SelfDescription,10,15, new{ @class="form-control"})
   
    <br />
    <br />

    <button class="btn btn-dark">Update</button>

    <br />
    <br />
}