@model List<Experience>
@{
    ViewData["Title"] = "ListExperience";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h3>Experiences</h3>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Position</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Statu</th>
        <th>Edit</th> 
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Position</td>
            <td>@item.StartDate</td>
            <td>@item.EndDate</td>
            <td>@item.IsActive</td>
            <td><a href="/Resume/EditExperience/@item.Id" class="btn btn-warning">Edit</a></td>
             
        </tr>
    }
    <a href="/Resume/AddExperience/" class="btn btn-primary">New Experience</a>
</table>

