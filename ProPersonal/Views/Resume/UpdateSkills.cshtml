@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "UpdateSkills";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h3>Update Skills</h3>



@using (Html.BeginForm("UpdateSkills", "Resume", FormMethod.Post, new { @class = "col-lg-12" }))
{
    @Html.Label("Skills")
    @Html.DropDownListFor(x=>x.Id,(List<SelectListItem>)ViewBag.listSkills, new {@class="form-control"})



    @Html.Label("Your Shine")
    @Html.TextBoxFor(x=>x.Name, new{ @class="form-control"})
 

    <br />
    <br />



    @Html.Label("How good you are?")
    @Html.TextBoxFor(x=>x.Qualification, new {@class="form-control"})

    <br />
    <br />




    @Html.Label("Still skilled and interested?")
    @Html.TextBoxFor(x=>x.IsActive, new{ @class="form-control"})


    <br />
    <br />

    <button class="btn btn-dark">Update</button>

    <br />
    <br />
}
