@model EntityLayer.Concrete.BusinessCard

<header>
                <div class="cover bg-light">
                    <div class="container px-3">
                        <div class="row">
                            <div class="col-lg-6 p-2"><img class="img-fluid" src="images/illustrations/hello3.svg" alt="hello" /></div>
                            <div class="col-lg-6">
                                <div class="mt-5">
                                    <p class="lead text-uppercase mb-1">Hello!</p>
                                    <h1 class="intro-title marker" data-aos="fade-left" data-aos-delay="50">I’m Baris Dogan</h1>
                                    <p class="lead fw-normal mt-3" data-aos="fade-up" data-aos-delay="100">Software Developer & @Model.Profession</p>
                                    <div class="social-nav" data-aos="fade-up" data-aos-delay="200">
                                        <nav role="navigation">
                                            <ul class="nav justify-content-left">
                                                <li class="nav-item"><a class="nav-link" href="https://www.linkedin.com/in/barisdogan-biz/" title="LinkedIn"><i class="fab fa-linkedin"></i><span class="menu-title sr-only">LinkedIn</span></a></li>
                                                <li class="nav-item"><a class="nav-link" href="https://www.github.com/gersterk/" title="Behance"><i class="fab fa-github"></i><span class="menu-title sr-only">Github</span></a></li>
                                            </ul>
                                        </nav>
                                    </div>
                                    <div class="mt-3" data-aos="fade-up" data-aos-delay="200"><a class="btn btn-primary shadow-sm mt-1 hover-effect" href="#contact">Get In Touch <i class="fas fa-arrow-right"></i></a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="wave-bg"></div>
            </header>
            <div class="section pt-4 px-3 px-lg-4" id="about">
                <div class="container-narrow">
                    <div class="row">
                        <div class="col-md-6">
                            <h2 class="h4 my-2">Hello! I’m Baris.</h2>
                            <p>@Model.SelfDescription</p>
                            <div class="row mt-3">
                                <div class="col-sm-2">
                                    <div class="pb-1">Email:</div>
                                </div>
                                <div class="col-sm-10">
                                    <div class="pb-1 fw-bolder">@Model.Email</div>
                                </div>
                                <div class="col-sm-2">
                                    <div class="pb-1">Phone:</div>
                                </div>
                                <div class="col-sm-10">
                                    <div class="pb-1 fw-bolder">Kindly ask through mail</div>
                                </div>
                                <div class="col-sm-2">
                                    <div class="pb-1">Address:</div>
                                </div>
                                <div class="col-sm-10">
                                    <div class="pb-1 fw-bolder">@Model.Address</div>
                                </div>
                                <div class="col-sm-2">
                                    <div class="pb-1">Availability:</div>
                                </div>
                                <div class="col-sm-10">
                                    <div class="pb-1 fw-bolder">Mail me, please!</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-5 offset-md-1" data-aos="fade-left" data-aos-delay="100"><img class="avatar img-fluid mt-2" src="@Model.Image" width="400" height="400" alt="Baris Dogan" /></div>
                    </div>
                </div>
            </div>
