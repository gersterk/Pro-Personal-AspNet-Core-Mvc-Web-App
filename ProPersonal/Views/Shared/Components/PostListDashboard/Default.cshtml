                                {
                                <tr>
                                <td>
                                <img src="~/writer/assets/images/faces/face1.jpg" class="mr-2" alt="image"> @item.BlogName
                                </td>
                                <td> Fund is not recieved </td>
                                <td>
                                <label class="badge badge-gradient-success">DONE</label>
                                </td>
                                <td> @(((DateTime)item.PublishDate).ToString("dd-MMM-yyyy")) </td>
                                <td> WD-12345 </td>
                                </tr>
                                }*@


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
