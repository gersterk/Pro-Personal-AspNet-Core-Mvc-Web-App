@model List<Project>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Projects</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Name </th>
                                <th> Description </th>
                                <th> Creat Date</th>
                                <th> Situation</th>
                                <th> Process</th>

                            </tr>
                        </thead>
                        @foreach (var item in Model)
                            {
                        <tbody>
                   
                                <tr>
                                    <td> @item.ProjectId</td>
                                    <td>@item.ProjectName </td>
                                    <td> @item.ProjectDescription.Substring(0,10)... </td>
                                    <td> @(((DateTime)item.ProjectPublishDate).ToString("dd MMM yyyy")) </td>
                                    <td> @item.IsActiveProject </td>
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </td>

                                </tr>

                            
                        </tbody>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>